{
  "name": "Email Generate",
  "version": "0.0.1",
  "description": "Email工具",
  "manifest_version": 2,
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_globs": ["http://flowerpassword.com/app/web*"],
      "css": ["css/content-script.css"],
      "js": ["js/libs/jquery.js", "js/libs/utils.js", "js/libs/domain.js", "js/chrome/messages.js", "js/chrome/url.js","js/email-tools.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "page_action": {
    "default_icon": "img/enabled.png"
  },
  "web_accessible_resources":[
    "iframe.html"
  ],
  "background":{
    "scripts":[
        "js/background.js"
        ]
  },
  "options_page":"options.html",
  "permissions" : [
    "tabs"
  ]
}
